#include <iostream>
#include <string>

bool IsKPeriodic(const std::string& str, int k) {
  // Check if k is valid
  if (k <= 0) {
    return false;
  }

  // Check if the length of the string is a multiple of k
  int n = str.length();
  if (n % k != 0) {
    return false;
  }

  // Check if the string is k-periodic
  for (int i = 0; i < k; ++i) {
    char c = str[i];
    for (int j = i + k; j < n; j += k) {
      if (str[j] != c) {
        return false;
      }
    }
  }

  return true;
}

int main() {
  std::string str = "abcabcabcabc";
  int k = 3;
  if (IsKPeriodic(str, k)) {
    std::cout << "The string is " << k << "-periodic." << std::endl;
  } else {
    std::cout << "The string is not " << k << "-periodic." << std::endl;
  }
  return 0;
}
